module Lithic
  module Type
    class BaseModel
      extend Lithic::Type::Converter

      type known_field =
        { mode: (:coerce | :dump)?, required: bool, nilable: bool }

      def self.known_fields: -> ::Hash[Symbol, (Lithic::BaseModel::known_field
      & { type_fn: (^-> Lithic::Type::Converter::input) })]

      def self.fields: -> ::Hash[Symbol, (Lithic::BaseModel::known_field
      & { type: Lithic::Type::Converter::input })]

      private def self.add_field: (
        Symbol name_sym,
        required: bool,
        type_info: {
          const: (nil | bool | Integer | Float | Symbol)?,
          enum: ^-> Lithic::Type::Converter::input?,
          union: ^-> Lithic::Type::Converter::input?,
          api_name: Symbol
        }
        | ^-> Lithic::Type::Converter::input
        | Lithic::Type::Converter::input,
        spec: ::Hash[Symbol, top]
      ) -> void

      def self.required: (
        Symbol name_sym,
        ::Hash[Symbol, top]
        | ^-> Lithic::Type::Converter::input
        | Lithic::Type::Converter::input type_info,
        ?::Hash[Symbol, top] spec
      ) -> void

      def self.optional: (
        Symbol name_sym,
        ::Hash[Symbol, top]
        | ^-> Lithic::Type::Converter::input
        | Lithic::Type::Converter::input type_info,
        ?::Hash[Symbol, top] spec
      ) -> void

      private def self.request_only: { -> void } -> void

      private def self.response_only: { -> void } -> void

      def self.==: (top other) -> bool

      def ==: (top other) -> bool

      def self.coerce: (
        Lithic::BaseModel | ::Hash[top, top] | top value,
        state: Lithic::Type::Converter::state
      ) -> (instance | top)

      def self.dump: (instance | top value) -> (::Hash[top, top] | top)

      def []: (Symbol key) -> top?

      def to_h: -> ::Hash[Symbol, top]

      alias to_hash to_h

      def deconstruct_keys: (::Array[Symbol]? keys) -> ::Hash[Symbol, top]

      def initialize: (?::Hash[Symbol, top] | self data) -> void

      def inspect: -> String
    end
  end
end
